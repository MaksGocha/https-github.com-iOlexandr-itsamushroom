extends root

block root
	+b("header").header: +i({ menu: mainMenu })
	
	main.main
		block main
			!= content
	
	+b("footer").footer: +i

block fonts
	link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Oswald:wght@500&display=swap" rel="stylesheet")

block styles

block scripts
	if (process.env.NODE_ENV === 'development')
		script(type='text/javascript' src='https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js')
	if (process.env.NODE_ENV === 'production')
		script(src='/assets/itsamushroom.vendor.js')

block analytics
